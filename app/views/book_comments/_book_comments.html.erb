        <div class="comments">
　　　　<% book.book_comments.each do |book_comment| %>
　　　　  <tr>
　　　　  <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
  　　    　<td><%=book_comment.comment %></td>
  　　    　<td>
  　　　  　<%if book_comment.user == current_user %>
           <%= link_to 'Destroy', book_book_comment_path(book_comment.book,book_comment), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{book_comment.id}"%>
           <% end %>
           </td>
           </tr>
   　   　<% end %>
   　  　</div>

   　  　<div class="new-comment">
   　　    <%= form_with model:[book, book_comment] do   |f| %>
   　　      <%= f.text_area :comment, rows:'7' %>
           <%= f.submit "送信" %>
         <% end %>
        </div>